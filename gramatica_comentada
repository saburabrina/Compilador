// TIPO é INTEIRO ou REAL
// VALOR é constante numérica
// OP2 é / % ou *
// OPR é = < > <= >= <>

// Pode haver código depois do comando RECEBA em uma funcão
// O comando RECEBA é opcional dentro do escopo de uma função
// A presença do comando RECEBA no programa principal é considerado um erro semântico.

PROGRAMA -> DECVAR PROTEFUNCOES FESCOPO

DECVAR -> VARIDS . DECVAR
DECVAR -> VARVET . DECVAR
DECVAR -> ''

VARID -> TIPO : ID
VARIDS -> TIPO : LISTAIDS
VARVET -> VET TIPO : ID VALOR

LISTAIDS -> ID SEMICOMMAID

SEMICOMMAID -> ; ID SEMICOMMAID
SEMICOMMAID -> ''

PROTEFUNCOES -> CABECALHOFUNCAO PF
PROTEFUNCOES -> ''

CABECALHOFUNCAO -> FUNCAO ID ( LISTAVAR ) : RETORNO

LISTAVAR-> VARX SEMICOMMAVAR

VARX -> VARID
VARX -> VARVET

SEMICOMMAVAR -> ; VARX SEMICOMMAVAR
SEMICOMMAVAR -> ''

RETORNO -> TIPO
RETORNO -> NULO

PF -> . PROTEFUNCOES
PF -> FESCOPO

FESCOPO -> VAR DECVAR INICIO CODIGO FIM REPORFIM

CODIGO -> ''
CODIGO -> ID MEIOT1 CODIGO
CODIGO -> DC CODIGO
CODIGO -> LOOP CODIGO
CODIGO -> LEITURA CODIGO
CODIGO -> ESCRITA CODIGO
CODIGO -> CMDRECEBA CODIGO

MEIOT1 -> ATR
MEIOT1 -> CF

ATR -> VECTORORNOT <- EXPA .

CF -> ( LISTAELEM )

DC -> SE EXPRC INICIO CODIGO FIM ELSE

ELSE -> SENAO INICIO CODIGO FIM
ELSE -> ''

LOOP -> ENQUANTO EXPRC INICIO CODLOOP FIM
LOOP -> PARA ID DE EXPA ATEH EXPA INICIO CODLOOP FIM

CODLOOP -> CODIGO CODLOOP
CODLOOP -> PARE CODLOOP
CODLOOP -> ''

CMDRECEBA -> RECEBA RECEBACONTEUDO .

VECTORORNOT -> [ EXPA ]
VECTORORNOT -> ''

RECEBACONTEUDO -> ''
RECEBACONTEUDO -> ( EXPA )

REPORFIM -> CABECALHOFUNCAO FESCOPO
REPORFIM -> ''